        }

        .app-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
        }

        .app-icon {
            width: 80px;
            height: 80px;
            border-radius: 20%;
            margin-bottom: 15px;
