<body>

    <div id="appStore">
        
        <header class="header">
            <h1><i class="fas fa-store"></i> متجر التطبيقات الفاخر</h1>
            <a href="#" class="admin-link" onclick="openAdminModal(event)">
                <i class="fas fa-lock"></i> لوحة التحكم
            </a>
        </header>

        <div class="container">
            <h2 class="section-title">✨ تطبيقاتنا المميزة اليوم</h2>
            
            <div class="app-grid" id="appGrid">
                </div>
        </div>

    </div>

    <div id="adminModal" class="modal" style="display: none;">
        <div class="modal-content">
            <i class="fas fa-user-shield" style="font-size: 3rem; color: var(--primary-color); margin-bottom: 15px;"></i>
            <h3>الوصول إلى لوحة الإدارة</h3>
            <p>الرجاء إدخال كلمة المرور للتحكم في محتوى المتجر.</p>
            <input type="password" id="adminPassword" placeholder="كلمة المرور">
            <button onclick="checkPassword()">دخول</button>
            <p id="authMessage" style="color: var(--danger-color); margin-top: 10px; display: none;">كلمة المرور غير صحيحة.</p>
        </div>
    </div>
    
    <div id="adminPanel" style="display: none;">
        <div class="container">
            <div class="admin-header">
                <h2><i class="fas fa-tools"></i> لوحة التحكم الإدارية (محاكاة)</h2>
                <button class="delete-btn" onclick="logoutAdmin()">العودة للمتجر</button>
            </div>
            
            <div class="control-form">
                <h3>إضافة تطبيق جديد</h3>
                <input type="text" id="appName" placeholder="اسم التطبيق (مثل: MoodScape AI)" required>
                <input type="text" id="appImage" placeholder="رابط صورة الأيقونة (مثال: https://via.placeholder.com/80/007bff/fff)" value="https://via.placeholder.com/80/007bff/fff" required>
                <textarea id="appDescription" placeholder="وصف قصير للتطبيق" rows="2" required></textarea>
                <input type="number" id="appPrice" placeholder="سعر التطبيق (صفر للمجاني)" min="0" required>
                <button onclick="addApp()"><i class="fas fa-plus"></i> إضافة التطبيق</button>
            </div>
            
            <div class="app-list-control">
                <h3>التطبيقات الحالية</h3>
                <div id="currentAppsList">
                    </div>
            </div>
        </div>
    </div>


    <script>
        // -------------------------------------
        // البيانات الأولية (للمحاكاة فقط)
        // -------------------------------------
        const ADMIN_PASSWORD = "123/123";
        let applications = [
            { id: 1, name: "MoodScape AI", image: "https://via.placeholder.com/80/007bff/fff?text=AI", description: "مساعد ذكاء اصطناعي فائق السرعة يعالج 100 تريليون نقطة بيانات.", price: 0 },
            { id: 2, name: "Luxury Wallet", image: "https://via.placeholder.com/80/28a745/fff?text=W", description: "أفضل تطبيق لإدارة الأموال والميزانية الشخصية باحترافية.", price: 4.99 },
            { id: 3, name: "Pro Editor", image: "https://via.placeholder.com/80/dc3545/fff?text=E", description: "أداة تحرير صور وفيديو متقدمة للمحترفين والمصممين.", price: 9.99 },
            { id: 4, name: "Secure VPN", image: "https://via.placeholder.com/80/6c757d/fff?text=V", description: "شبكة افتراضية خاصة لحماية خصوصيتك وأمان بياناتك.", price: 1.99 },
        ];
        let nextAppId = 5; // للمحافظة على مُعرف فريد

        // -------------------------------------
        // وظائف الواجهة الأمامية (المتجر)
        // -------------------------------------

        function renderAppGrid() {
            const appGrid = document.getElementById('appGrid');
            appGrid.innerHTML = ''; // تفريغ الشبكة قبل إعادة البناء

            applications.forEach(app => {
                const priceText = app.price === 0 ? 
                    `<span class="app-price free">مجاني</span>` : 
                    `<span class="app-price">$${app.price.toFixed(2)}</span>`;
                
                const card = `
                    <div class="app-card">
                        <img src="${app.image}" alt="${app.name} Icon" class="app-icon">
                        <h3>${app.name}</h3>
                        <p>${app.description}</p>
                        ${priceText}
                        <button class="download-btn"><i class="fas fa-download"></i> تنزيل</button>
                    </div>
                `;
                appGrid.innerHTML += card;
            });
        }

        // -------------------------------------
        // وظائف لوحة التحكم (الإدارة)
        // -------------------------------------

        function renderAdminList() {
            const currentAppsList = document.getElementById('currentAppsList');
            currentAppsList.innerHTML = '';

            applications.forEach(app => {
                const listItem = `
                    <div class="app-item-control">
                        <span>${app.name} (${app.price === 0 ? 'مجاني' : `$${app.price.toFixed(2)}`})</span>
                        <button class="delete-btn" onclick="deleteApp(${app.id})"><i class="fas fa-trash-alt"></i> حذف</button>
                    </div>
                `;
                currentAppsList.innerHTML += listItem;
            });
            
            if (applications.length === 0) {
                 currentAppsList.innerHTML = '<p style="color: #6c757d; text-align: center;">لا يوجد تطبيقات حالياً في المتجر.</p>';
            }
        }
        
        function addApp() {
            const name = document.getElementById('appName').value;
            const image = document.getElementById('appImage').value;
            const description = document.getElementById('appDescription').value;
            const price = parseFloat(document.getElementById('appPrice').value);

            if (!name || !image || !description || isNaN(price)) {
                alert('الرجاء ملء جميع الحقول بشكل صحيح.');
                return;
            }

            const newApp = {
                id: nextAppId++,
                name,
                image,
                description,
                price
            };

            applications.push(newApp);

            // مسح الحقول بعد الإضافة
            document.getElementById('appName').value = '';
            document.getElementById('appDescription').value = '';
            document.getElementById('appPrice').value = 0;
            
            // تحديث الواجهتين
            renderAppGrid();
            renderAdminList();
            alert('تمت إضافة التطبيق بنجاح!');
        }
        
        function deleteApp(appId) {
            applications = applications.filter(app => app.id !== appId);
            
            // تحديث الواجهتين
            renderAppGrid();
            renderAdminList();
            alert('تم حذف التطبيق بنجاح!');
        }
        
        // -------------------------------------
        // وظائف حماية كلمة المرور
        // -------------------------------------
        
        function openAdminModal(event) {
            event.preventDefault(); 
            document.getElementById('adminModal').style.display = 'flex';
            document.getElementById('adminPassword').value = ''; 
            document.getElementById('authMessage').style.display = 'none';
        }

        function checkPassword() {
            const passwordInput = document.getElementById('adminPassword').value;
            const authMessage = document.getElementById('authMessage');

            if (passwordInput === ADMIN_PASSWORD) {
                // الدخول الناجح
                document.getElementById('adminModal').style.display = 'none';
                document.getElementById('appStore').style.display = 'none';
                document.getElementById('adminPanel').style.display = 'block';
                document.body.style.backgroundColor = 'var(--background-light)';
                
                // عرض قائمة التطبيقات في لوحة التحكم
                renderAdminList();

            } else {
                // كلمة المرور خاطئة
                authMessage.style.display = 'block';
                document.getElementById('adminPassword').value = '';
            }
        }
        
        function logoutAdmin() {
            document.getElementById('adminPanel').style.display = 'none';
            document.getElementById('appStore').style.display = 'block';
            document.body.style.backgroundColor = 'var(--background-dark)';
            document.getElementById('adminPassword').value = '';
        }

        // -------------------------------------
        // التشغيل الأولي
        // -------------------------------------
        window.onload = function() {
            renderAppGrid();
        };

    </script>
</body>
</html>
